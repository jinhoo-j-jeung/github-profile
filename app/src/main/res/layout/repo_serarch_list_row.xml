<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10sp"
    card_view:cardCornerRadius="5sp"
    card_view:cardElevation="2sp">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <RelativeLayout
        android:id="@+id/CS242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

      <jinhoo.com.githubprofile.adapters.CircularImageView
        android:id="@+id/repo_search_result_iv"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="75dp"
        android:layout_height="75dp"/>

      <TextView
        android:id="@+id/repo_search_result_owner_tv"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_below="@id/repo_search_result_iv"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
      </RelativeLayout>
      <RelativeLayout
        android:layout_margin="5dp"
        android:layout_toEndOf="@id/CS242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/repo_search_result_id_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:textStyle="bold"/>

        <TextView
          android:id="@+id/repo_search_result_link_tv"
          android:autoLink="web"
          android:layout_below="@id/repo_search_result_id_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"/>
      </RelativeLayout>
    </RelativeLayout>

  </android.support.v7.widget.CardView>

</RelativeLayout>